<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_number"
            android:text="153"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/order_status"
            android:text="153"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/order_sum_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:textColor="#F83F3C"
        android:text="123"/>

    <TextView
        android:id="@+id/created_at"
        android:text="123"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

    <View
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:background="#F4F1F1"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name"
            android:text="123"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_name"
            android:layout_marginLeft="20dp"
            android:text="123"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/user_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:maxLength="20"
            android:text="123"/>

        <Button
            android:id="@+id/receive_order"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:text="接单"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:textColor="@color/whiteColor"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/see_the_evaluation"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:text="查看评价"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:textColor="@color/whiteColor"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/reject_order"
            android:layout_toLeftOf="@id/receive_order"
            android:layout_marginRight="20dp"
            android:layout_width="70dp"
            android:text="拒单"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:textColor="@color/whiteColor"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:background="#9CD6FC"
        android:layout_height="2dp"/>
</LinearLayout>